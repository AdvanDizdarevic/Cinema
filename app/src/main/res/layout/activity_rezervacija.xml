<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ba.fit.kino.RegistracijaActivity"
    android:background="#FF303030">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textColor="#FFFFFF"
        android:id="@+id/textViewImeKorisnika"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/brojKreditneKartice" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textColor="#FFFFFF"
        android:id="@+id/textViewVrijeme"
        android:layout_below="@+id/textViewImeKorisnika"
        android:layout_alignLeft="@+id/textViewImeKorisnika"
        android:layout_alignStart="@+id/textViewImeKorisnika"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textViewCijena"
        android:layout_below="@+id/textViewVrijeme"
        android:layout_alignLeft="@+id/textViewVrijeme"
        android:layout_alignStart="@+id/textViewVrijeme"
        android:layout_marginTop="20dp"
        android:textColor="#FFFFFF"
        android:padding="20dp"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Broj kreditne kartice"
        android:ems="10"
        android:id="@+id/brojKreditneKartice"
        android:password="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/txt_shape"
        android:textSize="16dp"
        android:maxLength="13"
        android:textColor="#000000"
        android:padding="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RezerviÅ¡i"
        android:id="@+id/rezervacija"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="35dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:textColor="#000000"
        android:background="@drawable/btn_shape_selector"
        />

</RelativeLayout>
